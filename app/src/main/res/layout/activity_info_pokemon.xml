                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/textGreen"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_Alto"
                    app:layout_constraintEnd_toEndOf="@+id/tv_Alto"
                    app:layout_constraintStart_toEndOf="@+id/cv_metros"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintVertical_bias="1.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="pies"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_Alto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_Peso"
                    app:layout_constraintTop_toBottomOf="@+id/cv_metros" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text="@string/types"
                    android:textColor="#009688"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Peso" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv">

                    <ImageView
                        android:id="@+id/iv_bicho"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/bicho" />

                    <ImageView
                        android:id="@+id/iv_siniestro"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/siniestro"
                        app:tint="#727798" />

                    <ImageView
                        android:id="@+id/iv_dragon"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/dragon" />

                    <ImageView
                        android:id="@+id/iv_electrico"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/electrico" />

                    <ImageView
                        android:id="@+id/iv_hada"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/hada"
                        app:tint="#FFA0C0" />

                    <ImageView
                        android:id="@+id/iv_lucha"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/lucha" />

                    <ImageView
                        android:id="@+id/iv_fuego"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/fuego"
                        app:tint="#FF602E" />

                    <ImageView
                        android:id="@+id/iv_volador"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/volador" />

                    <ImageView
                        android:id="@+id/iv_fantasma"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/fantasma" />

                    <ImageView
                        android:id="@+id/iv_planta"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/planta" />

                    <ImageView
                        android:id="@+id/iv_tierra"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/tierra"
                        app:tint="#D17D00" />

                    <ImageView
                        android:id="@+id/iv_hielo"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/hielo" />

                    <ImageView
                        android:id="@+id/iv_normal"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/normal" />

                    <ImageView
                        android:id="@+id/iv_veneno"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/veneno" />

                    <ImageView
                        android:id="@+id/iv_psiquico"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
