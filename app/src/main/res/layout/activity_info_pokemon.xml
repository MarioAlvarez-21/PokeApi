                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/roca" />

                    <ImageView
                        android:id="@+id/iv_acero"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/acero" />

                    <ImageView
                        android:id="@+id/iv_agua"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginHorizontal="5dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/agua"
                        app:tint="#00BCD4" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/statistics"
                    android:textColor="#009688"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/hp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <ProgressBar
                    android:id="@+id/pb_HP"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:max="200"
                    android:min="0"
                    android:progressBackgroundTint="@color/asas"
                    android:progressTint="#8BC34A"
                    app:layout_constraintEnd_toStartOf="@id/tv_HP"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:progress="50" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/attack"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pb_HP" />

                <ProgressBar
                    android:id="@+id/pb_Attack"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
